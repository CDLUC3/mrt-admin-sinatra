<html>
  <head>
    <meta charset="utf-8"/>
    <script	src="//ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.13.2/themes/smoothness/jquery-ui.css"></link>
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/merritt.css" />
    <script src="/merritt.js"></script>
    <title><%= context.title %></title>
  </head>
  <body>
    <h1><%= context.title %></h1>
    <div class="breadcrumb">
      <% unless context.top_page %>
      <a href="/">Home</a>
      <% end %>
      <% context.breadcrumbs.each do |bc| %>
      <span>/ <a href="<%= bc[:url] %>"><%= bc[:title] %></a></span>
      <% end %>
      <span>/ <%= context.title %></span>
    </div>
    <div class="main">
    <%= yield %>
    </div>
  </body>
</html>